<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <RelativeLayout
            android:id="@+id/MAP_RL_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Ví Của Tôi"
                android:textColor="#E91E63"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_centerHorizontal = "true"
                />

            <ImageView
                android:id="@+id/MAP_ICON_BACK"
                android:layout_alignParentLeft = "true"
                android:adjustViewBounds = "true"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop = "5dp"
                android:scaleType = "centerInside"
                android:src = "@drawable/icon_arrow_left"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số dư trong ví"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="20dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="17.000đ"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20dp"

                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nạp Tiền"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="20dp"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintEnabled="true"
            android:paddingTop="5dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/money"
                android:layout_width="350dp"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:hint="Số tiền cần nạp"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguồn Tiền"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="20dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="Biểu phí giao dịch"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="10dp"
                android:textColor="#0033FF"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="10dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vcb"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VietComBank"
                android:textStyle="bold"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tron"
                android:layout_weight="1"
                android:layout_gravity="center"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vtb"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VietTinBank"
                android:textStyle="bold"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tron1"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm ngân hàng nội địa/quốc tế"
                android:textStyle="bold"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_weight="1"
                android:layout_gravity="center"

                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnt"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Nạp Tiền"
            android:textColor="#fff" />
    </RelativeLayout>

</RelativeLayout>